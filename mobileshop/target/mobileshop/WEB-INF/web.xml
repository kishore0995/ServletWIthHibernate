<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<servlet>
  <servlet-name>login</servlet-name>
  <servlet-class>com.ssb.mobileshop.controller.LoginController</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>login</servlet-name>
  <url-pattern>/login</url-pattern>
</servlet-mapping>
<servlet>
<servlet-name>user</servlet-name>
<servlet-class>com.ssb.mobileshop.controller.UserController</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>user</servlet-name>
<url-pattern>/user</url-pattern>
</servlet-mapping>
<servlet>
  <servlet-name>phone</servlet-name>
  <servlet-class>com.ssb.mobileshop.controller.PhoneController</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>phone</servlet-name>
  <url-pattern>/user/viewphone</url-pattern>
  <url-pattern>/user/viewbrand</url-pattern>
  <url-pattern>/user/ram</url-pattern>
  <url-pattern>/user/viewbyram</url-pattern>
  <url-pattern>/user/price</url-pattern>
  <url-pattern>/user/yes</url-pattern>
  <url-pattern>/user/no</url-pattern>
  <url-pattern>/admin/add</url-pattern>
  <url-pattern>/admin/save</url-pattern>
  <url-pattern>/admin/edit</url-pattern>
  <url-pattern>/admin/delete</url-pattern>
</servlet-mapping>
<servlet>
  <servlet-name>model</servlet-name>
  <servlet-class>com.ssb.mobileshop.service.PhoneService</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>model</servlet-name>
  <url-pattern>/user/model</url-pattern>
  <url-pattern>/user/rambrand</url-pattern>
  <url-pattern>/user/brand</url-pattern>
  <url-pattern>/user/viewbyprice</url-pattern>
  <url-pattern>/user/id</url-pattern>
  <url-pattern>/user/buy</url-pattern>
  <url-pattern>/user/viewByPriceAndBrand</url-pattern>
</servlet-mapping>
<servlet>
  <servlet-name>signup</servlet-name>
  <servlet-class>com.ssb.mobileshop.controller.RegistrationController</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>signup</servlet-name>
  <url-pattern>/register</url-pattern>
</servlet-mapping>
<servlet>
  <servlet-name>Admin</servlet-name>
  <servlet-class>com.ssb.mobileshop.controller.AdminController</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>Admin</servlet-name>
  <url-pattern>/admin</url-pattern>
  <url-pattern>/save</url-pattern>
</servlet-mapping>
<servlet>
  <servlet-name>logout</servlet-name>
  <servlet-class>com.ssb.mobileshop.controller.LogoutController</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>logout</servlet-name>
<url-pattern>/logout</url-pattern>
</servlet-mapping>
<servlet>
<servlet-name>ViewPhone</servlet-name>
<servlet-class>com.ssb.mobileshop.controller.ViewServletController</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>ViewPhone</servlet-name>
  <url-pattern>/admin/view</url-pattern>
</servlet-mapping>
<servlet>
  <servlet-name>update</servlet-name>
  <servlet-class>com.ssb.mobileshop.controller.UpdateController</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>update</servlet-name>
  <url-pattern>/admin/update</url-pattern>
</servlet-mapping>
<filter>
  <filter-name>AuthenticationFilter</filter-name>
  <filter-class>com.ssb.mobileshop.AuthenticationFilter</filter-class>
</filter> 
<filter-mapping>
  <filter-name>AuthenticationFilter</filter-name>
  <url-pattern>/user/*</url-pattern>
  <url-pattern>/admin/*</url-pattern>
</filter-mapping>
  <display-name>Archetype Created Web Application</display-name>
</web-app>
